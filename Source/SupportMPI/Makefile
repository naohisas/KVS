#*****************************************************************************
#  $Id: $
#*****************************************************************************

#=============================================================================
#  Include.
#=============================================================================
include ../../kvs.conf
include ../../Makefile.def


#=============================================================================
#  INCLUDE_PATH, LIBRARY_PATH, LINK_LIBRARY, INSTALL_DIR.
#=============================================================================
INCLUDE_PATH := -I.. $(MPI_INCLUDE_PATH)
LIBRARY_PATH := $(MPI_LIBRARY_PATH)
LINK_LIBRARY := $(MPI_LINK_LIBRARY)
INSTALL_DIR  := $(KVS_DIR)

INCLUDE_PATH += $(OPENMP_INCLUDE_PATH)
LIBRARY_PATH += $(OPENMP_LIBRARY_PATH)
LINK_LIBRARY += $(OPENMP_LINK_LIBRARY)


#=============================================================================
#  Include build rule.
#=============================================================================
include BuildRule.mk


#=============================================================================
#  Project name.
#=============================================================================
TARGET_LIB := $(OUTDIR)/$(LIB_KVS_SUPPORT_MPI)


#=============================================================================
#  Build rule.
#=============================================================================
$(TARGET_LIB): $(OBJECTS)
	$(AR) $@ $^
	$(RANLIB) $@


#=============================================================================
#  build.
#=============================================================================
build:: $(TARGET_LIB)


#=============================================================================
#  clean.
#=============================================================================
clean::
	$(RMDIR) $(OUTDIR)


#=============================================================================
#  install.
#=============================================================================
install::
	$(MKDIR) $(INSTALL_DIR)/lib
	$(INSTALL) $(TARGET_LIB) $(INSTALL_DIR)/lib
	$(RANLIB) $(INSTALL_DIR)/lib/$(LIB_KVS_SUPPORT_MPI)
